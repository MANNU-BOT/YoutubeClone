<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Frag_Library">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="Recent"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/listitem_history" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/grey2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginBottom="8dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_history"
                    android:layout_width="@dimen/twentyFour"
                    android:layout_height="@dimen/twentyFour"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_history"
                    android:tint="@color/grey2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_history"
                    android:text="History"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginBottom="8dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_download"
                    android:layout_width="@dimen/twentyFour"
                    android:layout_height="@dimen/twentyFour"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_download"
                    android:tint="@color/grey2" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_download"
                    android:text="Downloads"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_download"
                    android:text="14 videos" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/blue" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginBottom="8dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_yourvideos"
                    android:layout_width="@dimen/twentyFour"
                    android:layout_height="@dimen/twentyFour"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youtube"
                    android:tint="@color/grey2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_yourvideos"
                    android:text="Your videos"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginBottom="8dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_purchases"
                    android:layout_width="@dimen/twentyFour"
                    android:layout_height="@dimen/twentyFour"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_purchases"
                    android:tint="@color/grey2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_purchases"
                    android:text="Purchases"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginBottom="8dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_watch_later"
                    android:layout_width="@dimen/twentyFour"
                    android:layout_height="@dimen/twentyFour"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_watch_later"
                    android:tint="@color/grey2" />

                <TextView
                    android:id="@+id/title_watch_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_watch_later"
                    android:text="Watch later"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_watch_later"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_watch_later"
                    android:text="65 unwatched videos" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/grey2" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="Playlists"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <Spinner
                    android:id="@+id/subscriptions_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:entries="@array/library_playlist_array" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginTop="16dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add"
                    android:tint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@id/ic_add"
                    android:text="New Playlist"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourtyEight"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="@dimen/twenty">

                <ImageView
                    android:id="@+id/ic_likes"
                    android:layout_width="@dimen/twentyFour"
                    android:layout_height="@dimen/twentyFour"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_like"
                    android:tint="@color/grey2" />

                <TextView
                    android:id="@+id/title_liked_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_likes"
                    android:text="Liked Videos"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_liked_videos"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_likes"
                    android:text="260 videos" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/listitem_playlist_2" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>